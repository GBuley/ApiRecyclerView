<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shibe_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Go to next activity"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_int_count"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shibe_btn"
        android:background="@color/green_200"
        android:inputType="number"
        android:hint="How many Images?"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rg_image_type"
        app:layout_constraintBottom_toTopOf="@id/urls_type"
        android:text="Urls or filenames?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RadioGroup
        android:id="@+id/rg_image_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/shibe_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_shibes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shibes"
            android:onClick="onImageTypeRadioButtonClick"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/cats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cats"
            android:onClick="onImageTypeRadioButtonClick"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/birds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            android:onClick="onImageTypeRadioButtonClick"/>
    </RadioGroup>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rg_image_type"
        app:layout_constraintBottom_toTopOf="@id/urls_type"
        android:text="Urls or filenames?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RadioGroup
        android:id="@+id/urls_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/rg_image_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/url_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urls"
            android:onClick="onUrlsRadioButtonClick"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/url_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FileNames"
            android:onClick="onUrlsRadioButtonClick"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/http_urls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/urls_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/https"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https"
            android:onClick="onHttpsRadioButtonClick"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http"
            android:onClick="onHttpsRadioButtonClick"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>